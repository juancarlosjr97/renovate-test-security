{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":automergeDisabled",
    ":dependencyDashboard",
    "group:all"
  ],
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "packageRules": [
    {
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "passport"
      ],
      "groupName": "Node dependency - passport"
    },
    {
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "express"
      ],
      "groupName": "Node dependency - express"
    }
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "packageRules": [
      {
        "matchPackageNames": [
          "passport"
        ],
        "allowedVersions": "<0.6"
      },
      {
        "dependencyDashboardApproval": true,
        "matchPackageNames": [
          "express"
        ],
        "groupName": "Node dependency - express"
      }
    ]
  }
}
