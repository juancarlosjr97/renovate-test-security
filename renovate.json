{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":automergeDisabled",
    ":dependencyDashboard",
    "group:all"
  ],
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "packageRules": [
      {
        "dependencyDashboardApproval": true,
        "matchPackageNames": [
          "passport"
        ]
      },
      {
        "dependencyDashboardApproval": true,
        "matchPackageNames": [
          "express"
        ],
        "groupName": "Node dependency - express"
      }
    ]
  }
}
